{
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git fetch:*)",
      "Bash(git merge:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(npm run:*)",
      "Bash(npx tsc:*)",
      "Bash(npx prisma:*)",
      "Bash(npx eslint:*)",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)",
      "WebSearch",
      "WebFetch(domain:support.discogs.com)",
      "WebFetch(domain:www.discogs.com)",
      "WebFetch(domain:musicbrainz.org)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/format-files.sh"
          }
        ]
      }
    ]
  }
}
