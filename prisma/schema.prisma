// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Account model - OAuth provider accounts
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth.js VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User accounts - now authentication-agnostic
model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  emailVerified DateTime?
  name          String?
  image         String?

  // Legacy Discogs fields (kept temporarily nullable for migration)
  discogsUsername   String?   @unique
  discogsId         String?   @unique
  accessToken       String?
  accessTokenSecret String?

  // User preferences
  displayName  String?
  bio          String?
  publicSlug   String?  @unique  // e.g., "johns-vinyl"
  isPublic     Boolean  @default(true)

  // Settings
  defaultSort  String   @default("artist")
  itemsPerPage Int      @default(50)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accounts          Account[]
  sessions          Session[]
  discogsConnection DiscogsConnection?

  @@index([publicSlug])
  @@index([email])
}

// Discogs API connection - separate from authentication
model DiscogsConnection {
  id       String @id @default(cuid())
  userId   String @unique
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  discogsId       String @unique
  discogsUsername String @unique

  // OAuth tokens (encrypted)
  accessToken       String
  accessTokenSecret String

  connectedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([discogsUsername])
  @@index([discogsId])
}

// Session management for NextAuth
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Collection cache metadata to track sync status
model CollectionCache {
  id              String   @id @default(cuid())
  discogsUsername String   @unique
  lastFetched     DateTime
  totalItems      Int
  version         Int      @default(1)

  @@index([discogsUsername])
}
