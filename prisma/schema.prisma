// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Account model - OAuth provider accounts
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth.js VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User accounts - now authentication-agnostic
model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  emailVerified DateTime?
  name          String?
  image         String?

  // Legacy Discogs fields (kept temporarily nullable for migration)
  discogsUsername   String?   @unique
  discogsId         String?   @unique
  accessToken       String?
  accessTokenSecret String?

  // User preferences
  displayName  String?
  bio          String?
  publicSlug   String?  @unique  // e.g., "johns-vinyl"
  isPublic     Boolean  @default(true)

  // Settings
  defaultSort        String            @default("artist")
  itemsPerPage       Int               @default(50)
  albumCountDisplay  AlbumCountDisplay @default(PUBLIC_ONLY)

  // Admin & moderation fields
  role         UserRole   @default(USER)
  status       UserStatus @default(ACTIVE)
  bannedAt     DateTime?
  bannedReason String?
  bannedBy     String?  // User ID of admin who banned

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accounts          Account[]
  sessions          Session[]
  discogsConnection DiscogsConnection?
  adminActions      AdminAuditLog[] @relation("AdminActor")
  receivedActions   AdminAuditLog[] @relation("TargetUser")
  collectionViews   CollectionView[]
  excludedAlbums    ExcludedAlbum[]
  stackCurators     StackCurator[]
  stackRecords      StackRecord[]

  @@index([publicSlug])
  @@index([email])
  @@index([role])
  @@index([status])
}

// Discogs API connection - separate from authentication
model DiscogsConnection {
  id       String @id @default(cuid())
  userId   String @unique
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  discogsId       String @unique
  discogsUsername String @unique

  // OAuth tokens (encrypted)
  accessToken       String
  accessTokenSecret String

  connectedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([discogsUsername])
  @@index([discogsId])
}

// Session management for NextAuth
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Collection cache metadata to track sync status
model CollectionCache {
  id              String   @id @default(cuid())
  discogsUsername String   @unique
  lastFetched     DateTime
  totalItems      Int
  version         Int      @default(1)

  @@index([discogsUsername])
}

// Admin audit logging
model AdminAuditLog {
  id          String      @id @default(cuid())
  adminId     String
  admin       User        @relation("AdminActor", fields: [adminId], references: [id], onDelete: Cascade)
  action      AdminAction
  resource    String
  resourceId  String
  targetUserId String?
  targetUser   User?      @relation("TargetUser", fields: [targetUserId], references: [id], onDelete: SetNull)
  description String
  metadata    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime    @default(now())

  @@index([adminId])
  @@index([targetUserId])
  @@index([action])
  @@index([createdAt])
}

// Analytics event tracking
model AnalyticsEvent {
  id        String              @id @default(cuid())
  eventType AnalyticsEventType
  userId    String?
  metadata  Json?
  ipAddress String?
  userAgent String?
  referer   String?
  createdAt DateTime            @default(now())

  @@index([eventType])
  @@index([userId])
  @@index([createdAt])
}

// Collection view tracking
model CollectionView {
  id          String   @id @default(cuid())
  userId      String   // The user whose collection was viewed
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  visitorId   String?  // Cookie-based unique visitor ID
  viewerIp    String?
  viewerAgent String?
  referer     String?
  viewedAt    DateTime @default(now())

  @@index([userId])
  @@index([viewedAt])
  @@index([visitorId])
}

// Excluded albums - albums hidden from public gallery
model ExcludedAlbum {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  releaseId String   // Discogs release ID
  createdAt DateTime @default(now())

  @@unique([userId, releaseId])
  @@index([userId])
}

// Stack - Physical records in a listening area
model Stack {
  id          String    @id @default(cuid())
  name        String    // "Upstairs Listening Room"
  slug        String    @unique  // "daves-upstairs"
  description String?
  type        StackType @default(PERSONAL)
  isPublic    Boolean   @default(true)

  // Default sort for this stack
  defaultSort String    @default("artist")  // artist, year, title, added

  // QR code
  qrCodeUrl   String?

  // Location context (optional)
  address     String?
  city        String?

  createdBy   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  curators    StackCurator[]
  records     StackRecord[]

  @@index([slug])
  @@index([createdBy])
  @@index([isPublic])
}

// Stack curators - users who can manage a stack
model StackCurator {
  id       String      @id @default(cuid())
  stackId  String
  stack    Stack       @relation(fields: [stackId], references: [id], onDelete: Cascade)
  userId   String
  user     User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  role     CuratorRole @default(CURATOR)
  joinedAt DateTime    @default(now())

  @@unique([stackId, userId])
  @@index([stackId])
  @@index([userId])
}

// Stack records - which physical records are in a stack
model StackRecord {
  id         String   @id @default(cuid())
  stackId    String
  stack      Stack    @relation(fields: [stackId], references: [id], onDelete: Cascade)

  // Who owns this record (Discogs account)
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Which specific record from Discogs
  releaseId  String   // Discogs release ID
  instanceId String   // Discogs collection instance ID

  // Optional metadata
  notes      String?
  addedAt    DateTime @default(now())

  @@unique([stackId, instanceId])
  @@index([stackId])
  @@index([userId])
  @@index([releaseId])
}

// Enums
enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  BANNED
  SUSPENDED
}

enum AdminAction {
  USER_PROMOTE
  USER_DEMOTE
  USER_BAN
  USER_UNBAN
  USER_SUSPEND
  USER_DELETE
  USER_EDIT
  SETTINGS_VIEW
  ANALYTICS_VIEW
}

enum AnalyticsEventType {
  USER_SIGNUP
  USER_LOGIN
  PAGE_VIEW
  API_CALL
  COLLECTION_VIEW
  DISCOGS_CONNECT
  DISCOGS_DISCONNECT
  ERROR
}

enum AlbumCountDisplay {
  PUBLIC_ONLY
  TOTAL_AND_PUBLIC
}

enum StackType {
  PERSONAL
  COMMERCIAL
  INSTITUTIONAL
  PUBLIC
  OTHER
}

enum CuratorRole {
  OWNER
  CURATOR
  VIEWER
}
