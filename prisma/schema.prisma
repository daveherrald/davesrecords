// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

// User accounts with Discogs authentication
model User {
  id                String    @id @default(cuid())
  email             String?   @unique
  discogsUsername   String    @unique
  discogsId         String    @unique

  // OAuth tokens (stored encrypted)
  accessToken       String
  accessTokenSecret String

  // User preferences
  displayName       String?
  bio               String?
  publicSlug        String    @unique  // e.g., "johns-vinyl"
  isPublic          Boolean   @default(true)

  // Settings
  defaultSort       String    @default("artist")
  itemsPerPage      Int       @default(50)

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  sessions          Session[]

  @@index([publicSlug])
  @@index([discogsUsername])
}

// Session management for NextAuth
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Collection cache metadata to track sync status
model CollectionCache {
  id              String   @id @default(cuid())
  discogsUsername String   @unique
  lastFetched     DateTime
  totalItems      Int
  version         Int      @default(1)

  @@index([discogsUsername])
}
